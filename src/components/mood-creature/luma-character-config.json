  "accessibility": {
    "reduced_motion": {
      "use_static_images": true,
      "static_fallbacks": {
        "idle": "/images/luma-idle.svg",
        "happy": "/images/luma-happy.svg",
        "curious": "/images/luma-curious.svg",
        "content": "/images/luma-content.svg",
        "tired": "/images/luma-tired.svg",
        "focused": "/images/luma-focused.svg",
        "scattered": "/images/luma-scattered.svg",
        "social": "/images/luma-social.svg",
        "solitary": "/images/luma-solitary.svg"
      },
      "disable_particle_effects": true,
      "disable_glow": false,
      "simplify_transitions": true
    },
    "screen_reader": {
      "descriptions": {
        "idle": "Luma is calmly floating",
