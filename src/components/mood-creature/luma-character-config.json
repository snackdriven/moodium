        "curious": "Luma tilts their head inquisitively",
        "content": "Luma sways gently, looking peaceful",
        "energized": "Luma vibrates with energy",
        "tired": "Luma droops sleepily",
        "focused": "Luma pulses with concentration",
        "scattered": "Luma swirls in multiple directions",
        "social": "Luma multiplies to show social energy",
        "solitary": "Luma becomes smaller and retreats",
        "waiting": "Luma blinks patiently",
        "processing": "Luma shows thought bubbles while thinking",
        "success": "Luma celebrates with confetti",
        "error": "Luma looks dizzy and confused"
      },
      "aria_labels": {
        "character": "Luma mood companion",
        "mood_slider": "Mood intensity selector",
        "energy_axis": "Energy level from tired to energized",
        "focus_axis": "Focus level from scattered to focused",
        "social_axis": "Social preference from solitary to social"
      }
    },
    "color_blind_modes": {
      "protanopia": {
        "primary": "#0073E6",
        "secondary": "#FFB000",
        "accent": "#7B7B7B"
      },
      "deuteranopia": {
        "primary": "#0080FF",
        "secondary": "#FFCC00",
        "accent": "#808080"
      },
      "tritanopia": {
        "primary": "#DC143C",
        "secondary": "#00CED1",
        "accent": "#696969"
      }
    }
  },
  "behaviors": {
    "idle_variations": [
      {
        "trigger": "time",
        "interval": 30000,
        "animations": ["blink", "shift", "wiggle"]
      },
      {
        "trigger": "inactivity",
        "threshold": 60000,
        "animation": "sleep"
      }
    ],
    "reactive": {
      "mouse_proximity": {
        "near": {
          "distance": 100,
          "animation": "lean_towards",
          "scale": 1.05
        },
        "far": {
          "distance": 300,
          "animation": "normal",
          "scale": 1.0
        }
      },
      "click_response": {
        "animation": "bounce_small",
        "sound": "/sounds/luma-giggle.mp3",
        "duration": 500
      },
      "drag_response": {
        "animation": "stretch",
        "elasticity": 0.3,
        "return_speed": 0.8
      }
    },
    "transitions": {
      "default_duration": 600,
      "easing": "cubic-bezier(0.4, 0, 0.2, 1)",
      "morph_between_states": true,
      "blend_colors": true
    }
  },
  "performance": {
    "quality_levels": {
      "high": {
        "fps": 60,
        "resolution_scale": 1.0,
        "enable_all_effects": true,
        "particle_count": "full"
      },
      "medium": {
        "fps": 30,
        "resolution_scale": 0.75,
        "enable_all_effects": false,
        "particle_count": "half"
      },
      "low": {
        "fps": 15,
        "resolution_scale": 0.5,
        "enable_all_effects": false,
        "particle_count": "none"
      }
    },
    "auto_adjust": true,
    "target_fps": 30,
    "lazy_load_animations": true,
    "preload_priority": ["idle", "greeting", "happy", "content"]
  },
  "customization": {
    "user_preferences": {
      "allow_sound": true,
      "animation_speed": 1.0,
      "size_scale": 1.0,
      "opacity": 1.0,
      "glow_intensity": 1.0
    },
    "unlockables": {
      "accessories": [
        {
          "id": "glasses",
