{
  "version": "1.0.0",
  "character": {
    "id": "luma-creature-001",
    "name": "Luma",
    "type": "creature-companion",
    "description": "A neurodivergent-friendly mood companion with dynamic Lottie animations"
  },
  "animations": {
    "idle": {
      "lottie": "/animations/luma-idle.json",
      "duration": 4000,
      "loop": true,
      "autoplay": true
    },
    "greeting": {
      "lottie": "/animations/luma-wave.json",
      "duration": 2000,
      "loop": false,
      "autoplay": true,
      "audio": "/sounds/luma-hello.mp3"
    },
    "happy": {
      "lottie": "/animations/luma-bounce.json",
      "duration": 3000,
      "loop": true,
      "autoplay": true,
      "particle_effects": {
        "type": "sparkles",
        "count": 12,
        "color": "#FFD700"
      }
    },
    "curious": {
      "lottie": "/animations/luma-tilt.json",
      "duration": 2500,
      "loop": true,
      "autoplay": true,
      "morphTargets": {
        "eyes": "wide",
        "antenna": "perked"
      }
    },
    "content": {
      "lottie": "/animations/luma-gentle-sway.json",
      "duration": 5000,
      "loop": true,
      "autoplay": true
    },
    "energized": {
      "lottie": "/animations/luma-vibrate.json",
      "duration": 2000,
      "loop": true,
      "autoplay": true,
      "glow": {
        "intensity": 1.5,
        "color": "#FF6B6B"
      }
    },
    "tired": {
      "lottie": "/animations/luma-droop.json",
      "duration": 4000,
      "loop": true,
      "autoplay": true,
      "opacity": 0.8
    },
    "focused": {
      "lottie": "/animations/luma-pulse.json",
      "duration": 3000,
      "loop": true,
      "autoplay": true,
      "audio": "/sounds/luma-focus.mp3"
    },
    "scattered": {
      "lottie": "/animations/luma-swirl.json",
      "duration": 3500,
      "loop": true,
      "autoplay": true
    },
    "social": {
      "lottie": "/animations/luma-group.json",
      "duration": 3000,
      "loop": true,
      "autoplay": true,
      "duplicates": 2
    },
    "solitary": {
      "lottie": "/animations/luma-retreat.json",
      "duration": 4000,
      "loop": true,
      "autoplay": true,
      "scale": 0.85
    },
    "waiting": {
      "lottie": "/animations/luma-blink.json",
      "duration": 6000,
      "loop": true,
      "autoplay": true
    },
    "processing": {
      "lottie": "/animations/luma-think.json",
      "duration": 3000,
      "loop": true,
      "autoplay": true,
      "thought_bubbles": true
    },
    "success": {
      "lottie": "/animations/luma-celebrate.json",
      "duration": 2500,
      "loop": false,
      "autoplay": true,
      "audio": "/sounds/luma-yay.mp3",
      "confetti": true
    },
    "error": {
      "lottie": "/animations/luma-dizzy.json",
      "duration": 2000,
      "loop": false,
      "autoplay": true,
      "shake": true
    }
  },
